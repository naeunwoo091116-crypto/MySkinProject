{
  "name": "myskin-mobile",
  "version": "1.0.0",
  "description": "MySkin - AI 피부 분석 및 LED 테라피 모바일 앱",
  "main": "index.js",
  "scripts": {
    "android:run": "cordova run android",
    "android:build": "cordova build android",
    "android:build:release": "cordova build android --release",
    "install:plugins": "cordova plugin add cordova-plugin-camera cordova-plugin-file cordova-plugin-ble-central cordova-plugin-device cordova-plugin-whitelist cordova-plugin-inappbrowser"
  },
  "keywords": [
    "myskin",
    "skin-analysis",
    "led-therapy"
  ],
  "author": "MySkin Team",
  "license": "MIT",
  "dependencies": {
    "cordova": "^12.0.0",
    "cordova-android": "^12.0.0"
  },
  "cordova": {
    "platforms": [
      "android"
    ],
    "plugins": {
      "cordova-plugin-camera": {
        "ANDROIDX_CORE_VERSION": "1.6.+"
      },
      "cordova-plugin-file": {
        "ANDROIDX_CORE_VERSION": "1.6.+",
        "ANDROIDX_WEBKIT_VERSION": "1.4.0"
      },
      "cordova-plugin-ble-central": {
        "ANDROIDX_CORE_VERSION": "1.6.+",
        "ANDROIDX_WEBKIT_VERSION": "1.4.0",
        "ACCESS_BACKGROUND_LOCATION": "false"
      },
      "cordova-plugin-device": {
        "ANDROIDX_CORE_VERSION": "1.6.+",
        "ANDROIDX_WEBKIT_VERSION": "1.4.0",
        "ACCESS_BACKGROUND_LOCATION": "false"
      },
      "cordova-plugin-inappbrowser": {
        "ANDROIDX_CORE_VERSION": "1.6.+",
        "ANDROIDX_WEBKIT_VERSION": "1.4.0",
        "ACCESS_BACKGROUND_LOCATION": "false"
      }
    }
  },
  "devDependencies": {
    "cordova-plugin-ble-central": "^2.0.0",
    "cordova-plugin-camera": "^8.0.0",
    "cordova-plugin-device": "^3.0.0",
    "cordova-plugin-file": "^8.1.3",
    "cordova-plugin-inappbrowser": "^6.0.0"
  }
}
